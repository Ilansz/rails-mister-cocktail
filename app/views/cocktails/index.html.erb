<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1541975902628-b157a9411603?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=747&q=80);">
  <div class="container">
    <h1>Mister cocktail </h1>
    <p>Doesn't know how to make a cocktail is not a problem anymore!</p>
    <%= link_to 'Create a new cocktail',  new_cocktail_path , class:"btn btn-outline-secondary"%>
  </div>
</div>

<div class="container">
  <div class="cards" style="margin:10px;">
    <% @cocktails.each do |cocktail| %>
    <% if  !(cocktail.photo.url.nil?) %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path cocktail.photo, height: 300, width: 400, crop: :fill %>)">
        <%= link_to cocktail.name, cocktail_path(cocktail), class:"text-white" %>
      </div>
      <% else %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail), class:"text-white" %>
      <% end %>
    <% end %>
  </div>
</div>




